precision mediump float;
varying vec2 texCoord;

uniform sampler2D texSampler2D;
uniform float texAlpha;

void main()
{
    vec4 colorSample = texture2D(texSampler2D, texCoord);
    colorSample.a = texAlpha;
    gl_FragColor = colorSample;
}
